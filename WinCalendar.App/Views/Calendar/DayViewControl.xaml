<UserControl x:Class="WinCalendar.App.Views.Calendar.DayViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="480"
             d:DesignWidth="800">
    <Grid Background="{DynamicResource AppPanelBackgroundBrush}">
        <DataGrid ItemsSource="{Binding DayEvents}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Background="{DynamicResource AppPanelBackgroundBrush}"
                  BorderBrush="{DynamicResource AppBorderBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="When" Binding="{Binding TimeRangeLabel}" Width="3*" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="3*" />
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" />
                <DataGridTemplateColumn Header="" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit"
                                    Width="72"
                                    Command="{Binding DataContext.OpenEditEventDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
