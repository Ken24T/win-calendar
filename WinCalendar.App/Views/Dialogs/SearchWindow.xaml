<Window x:Class="WinCalendar.App.Views.Dialogs.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Events"
        Height="500"
        Width="760"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="420" Margin="0,0,8,0" Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" />
            <Button Width="100" Content="Search" Command="{Binding SearchCommand}" />
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Results}" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" />
                <DataGridTextColumn Header="Start" Binding="{Binding StartDateTime}" Width="2*" />
                <DataGridTextColumn Header="End" Binding="{Binding EndDateTime}" Width="2*" />
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
