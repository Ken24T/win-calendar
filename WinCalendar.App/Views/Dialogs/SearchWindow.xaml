<Window x:Class="WinCalendar.App.Views.Dialogs.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WinCalendar.App.Converters"
        Title="Search Events"
        Height="500"
        Width="760"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="420" Margin="0,0,8,0" Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" />
            <Button Width="100" Content="Search" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" Command="{Binding SearchCommand}" />
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Results}" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" />
                <DataGridTextColumn Header="Start" Binding="{Binding StartDisplayLabel}" Width="2*" />
                <DataGridTextColumn Header="End" Binding="{Binding EndDisplayLabel}" Width="2*" />
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" />
                <DataGridTemplateColumn Header="" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit"
                                    Width="64"
                                    Command="{Binding DataContext.EditEventCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Searching..."
                       FontWeight="SemiBold"
                       Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="IndianRed"
                       FontWeight="SemiBold"
                       Visibility="{Binding ShowErrorState, Converter={StaticResource BoolToVisibilityConverter}}" />
            <TextBlock Text="No matching events found."
                       Foreground="DimGray"
                       FontWeight="SemiBold"
                       Visibility="{Binding ShowEmptyState, Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>
    </Grid>
</Window>
