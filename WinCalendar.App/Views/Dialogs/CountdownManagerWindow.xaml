<Window x:Class="WinCalendar.App.Views.Dialogs.CountdownManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Countdown Cards"
        Height="560"
        Width="760"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,4" Text="Title" />
            <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,8,8" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Grid.Row="0" Grid.Column="2" Margin="0,4" Text="Target" />
            <DatePicker Grid.Row="0" Grid.Column="3" Margin="0,0,0,8" SelectedDate="{Binding TargetDateTime}" />

            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,4" Text="Colour" />
            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,8,8" Text="{Binding ColourHex, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Grid.Row="1" Grid.Column="2" Margin="0,4" Text="Sort" />
            <TextBox Grid.Row="1" Grid.Column="3" Margin="0,0,0,8" Text="{Binding SortOrderText, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                <CheckBox Margin="0,0,12,0" Content="Active" IsChecked="{Binding IsActive}" />
                <CheckBox Content="Show inactive" IsChecked="{Binding ShowInactive}" />
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="80" Margin="0,0,8,0" Content="New" Command="{Binding NewCardCommand}" />
                <Button Width="80" Margin="0,0,8,0" Content="Save" Command="{Binding SaveCommand}" />
                <Button Width="80" Content="Delete" Command="{Binding DeleteCommand}" />
            </StackPanel>

            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Grid.ColumnSpan="4"
                       Margin="0,6,0,0"
                       Foreground="IndianRed"
                       FontWeight="SemiBold"
                       Text="{Binding ValidationMessage}"
                       Visibility="{Binding HasValidationMessage, Converter={StaticResource BoolToVisibilityConverter}}" />
        </Grid>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding VisibleCountdownCards}"
                  SelectedItem="{Binding SelectedCard, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" />
                <DataGridTextColumn Header="Target" Binding="{Binding TargetDateTime, StringFormat={}{0:dd MMM yyyy HH:mm}}" Width="2*" />
                <DataGridTextColumn Header="Colour" Binding="{Binding ColourHex}" Width="*" />
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="*" />
                <DataGridTextColumn Header="Sort" Binding="{Binding SortOrder}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
