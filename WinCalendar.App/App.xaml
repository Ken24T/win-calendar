<Application x:Class="WinCalendar.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework"
             xmlns:local="clr-namespace:WinCalendar.App">
    <Application.Resources>
        <SolidColorBrush x:Key="AppWindowBackgroundBrush" Color="#F7F7F9" />
        <SolidColorBrush x:Key="AppPanelBackgroundBrush" Color="#FFFFFF" />
        <SolidColorBrush x:Key="AppPanelMutedBackgroundBrush" Color="#F0F3F8" />
        <SolidColorBrush x:Key="AppOverlayBackgroundBrush" Color="#CCFFFFFF" />
        <SolidColorBrush x:Key="AppPrimaryTextBrush" Color="#24272E" />
        <SolidColorBrush x:Key="AppSecondaryTextBrush" Color="#626B7A" />
        <SolidColorBrush x:Key="AppBorderBrush" Color="#D9DEE8" />
        <SolidColorBrush x:Key="AppSubtleBorderBrush" Color="#E5EAF3" />
        <SolidColorBrush x:Key="AppErrorTextBrush" Color="#B42318" />
        <SolidColorBrush x:Key="AppInputBackgroundBrush" Color="#FFFFFF" />
        <SolidColorBrush x:Key="AppInputForegroundBrush" Color="#24272E" />
        <SolidColorBrush x:Key="AppInputBorderBrush" Color="#C5CCDA" />
        <SolidColorBrush x:Key="AppInputDisabledBackgroundBrush" Color="#F1F3F7" />
        <SolidColorBrush x:Key="AppInputDisabledForegroundBrush" Color="#8A93A3" />
        <SolidColorBrush x:Key="AppSelectionBackgroundBrush" Color="#DCE8FF" />
        <SolidColorBrush x:Key="AppSelectionForegroundBrush" Color="#1E2A44" />
        <SolidColorBrush x:Key="AppAccentBrush" Color="#0A64D6" />
        <SolidColorBrush x:Key="AppDayEventHeaderBrush" Color="#6F89AF" />
        <SolidColorBrush x:Key="AppDayEventBodyBrush" Color="#C9D4E8" />
        <SolidColorBrush x:Key="AppDayEventHeaderTextBrush" Color="#FFFFFF" />
        <SolidColorBrush x:Key="AppDayEventBodyTextBrush" Color="#20304A" />
        <SolidColorBrush x:Key="AppDayEventSeparatorBrush" Color="#ECF1FA" />
        <SolidColorBrush x:Key="AppMenuBackgroundBrush" Color="#FFFFFF" />
        <SolidColorBrush x:Key="AppMenuForegroundBrush" Color="#24272E" />
        <SolidColorBrush x:Key="AppMenuHoverBackgroundBrush" Color="#E9EEF8" />

        <Style TargetType="Window">
            <Setter Property="Background" Value="{DynamicResource AppWindowBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
        </Style>

        <Style TargetType="Menu">
            <Setter Property="Background" Value="{DynamicResource AppMenuBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppMenuForegroundBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="2" />
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource AppMenuForegroundBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8,3" />
            <Style.Triggers>
                <Trigger Property="Role" Value="TopLevelHeader">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Foreground" Value="{DynamicResource AppMenuForegroundBrush}" />
                    <Setter Property="Padding" Value="10,4" />
                </Trigger>
                <Trigger Property="Role" Value="SubmenuItem">
                    <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
                    <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Padding" Value="12,4" />
                </Trigger>
                <Trigger Property="Role" Value="SubmenuHeader">
                    <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
                    <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Padding" Value="12,4" />
                </Trigger>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppMenuHoverBackgroundBrush}" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource AppSecondaryTextBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource AppInputBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppInputForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppSubtleBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CaretBrush" Value="{DynamicResource AppInputForegroundBrush}" />
            <Setter Property="SelectionBrush" Value="{DynamicResource AppSelectionBackgroundBrush}" />
            <Setter Property="SelectionTextBrush" Value="{DynamicResource AppSelectionForegroundBrush}" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource AppInputDisabledBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppInputDisabledForegroundBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource AppInputBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppInputForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppSubtleBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource AppInputDisabledBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppInputDisabledForegroundBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppSelectionBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppSelectionForegroundBrush}" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppSelectionBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppSelectionForegroundBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="{DynamicResource AppInputBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppInputForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppSubtleBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource AppInputDisabledBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppInputDisabledForegroundBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DatePickerTextBox">
            <Setter Property="Background" Value="{DynamicResource AppInputBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppInputForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppSubtleBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CaretBrush" Value="{DynamicResource AppInputForegroundBrush}" />
            <Setter Property="SelectionBrush" Value="{DynamicResource AppSelectionBackgroundBrush}" />
            <Setter Property="SelectionTextBrush" Value="{DynamicResource AppSelectionForegroundBrush}" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource AppInputDisabledBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppInputDisabledForegroundBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource AppPanelMutedBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppSubtleBorderBrush}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppSelectionBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppSelectionForegroundBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppSelectionBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppSelectionForegroundBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppMenuHoverBackgroundBrush}" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppSelectionBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppSelectionForegroundBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Calendar">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="CalendarButton">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="CalendarDayButton">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsToday" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource AppAccentBrush}" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppSelectionBackgroundBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource AppSelectionForegroundBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="primitives:CalendarItem">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="Separator">
            <Setter Property="Background" Value="{DynamicResource AppBorderBrush}" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AppPanelMutedBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource AppPanelBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppSubtleBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource AppSubtleBorderBrush}" />
            <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource AppSubtleBorderBrush}" />
        </Style>
    </Application.Resources>
</Application>
