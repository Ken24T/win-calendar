<UserControl x:Class="WinCalendar.App.Views.Calendar.MonthViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:WinCalendar.App.Converters"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="520"
             d:DesignWidth="980">
    <UserControl.Resources>
        <converters:BoolToMonthForegroundConverter x:Key="BoolToMonthForegroundConverter" />
    </UserControl.Resources>

    <Grid Background="{DynamicResource AppPanelBackgroundBrush}">
        <ItemsControl ItemsSource="{Binding MonthCells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="6" Columns="7" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="2" Padding="5" Background="{DynamicResource AppPanelBackgroundBrush}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsToday}" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource AppAccentBrush}" />
                                        <Setter Property="BorderThickness" Value="2" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Button Content="{Binding Date.Day}"
                                    HorizontalAlignment="Left"
                                    Padding="0"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    FontWeight="SemiBold"
                                    Foreground="{Binding IsCurrentMonth, Converter={StaticResource BoolToMonthForegroundConverter}}"
                                    Command="{Binding DataContext.OpenNewEventOnDateDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding Date}" />
                            <ItemsControl Grid.Row="1" ItemsSource="{Binding Events}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding MonthCellLabel}"
                                                FontSize="11"
                                                HorizontalContentAlignment="Left"
                                                Margin="0,2,0,0"
                                                Padding="0"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                Command="{Binding DataContext.OpenEditEventDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Grid.Row="2"
                                       Margin="0,4,0,0"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AppSecondaryTextBrush}"
                                       Text="{Binding HiddenEventsLabel}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
