<UserControl x:Class="WinCalendar.App.Views.Calendar.MonthViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="520"
             d:DesignWidth="980">
    <Grid>
        <ItemsControl ItemsSource="{Binding MonthCells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="6" Columns="7" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#DDDDDD" BorderThickness="1" Margin="2" Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding Date.Day}"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding IsCurrentMonth, Converter={StaticResource BoolToMonthForegroundConverter}}" />
                            <ItemsControl Grid.Row="1" ItemsSource="{Binding Events}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Title}"
                                                FontSize="11"
                                                HorizontalContentAlignment="Left"
                                                Margin="0,2,0,0"
                                                Padding="0"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                Command="{Binding DataContext.OpenEditEventDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
