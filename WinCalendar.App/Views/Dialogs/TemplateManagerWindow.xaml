<Window x:Class="WinCalendar.App.Views.Dialogs.TemplateManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Templates"
        Height="500"
        Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="140" Margin="0,0,8,0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Width="180" Margin="0,0,8,0" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Width="90" Margin="0,0,8,0" Text="{Binding DurationMinutes, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Width="120" Margin="0,0,8,0" Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}" />
            <Button Width="90" Content="Add" Command="{Binding AddTemplateCommand}" />
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Templates}" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" />
                <DataGridTextColumn Header="Duration" Binding="{Binding DefaultDuration}" Width="*" />
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
