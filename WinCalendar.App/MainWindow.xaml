<Window x:Class="WinCalendar.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:WinCalendar.App.Converters"
        xmlns:views="clr-namespace:WinCalendar.App.Views.Calendar"
        mc:Ignorable="d"
        Title="WinCalendar"
        Height="720"
        Width="1080"
        MinHeight="600"
        MinWidth="900"
        Background="{DynamicResource AppWindowBackgroundBrush}"
        Foreground="{DynamicResource AppPrimaryTextBrush}">
    <Window.InputBindings>
        <KeyBinding Modifiers="Control" Key="N" Command="{Binding OpenNewEventDialogCommand}" />
        <KeyBinding Modifiers="Control" Key="F" Command="{Binding OpenSearchDialogCommand}" />
        <KeyBinding Modifiers="Control" Key="D1" Command="{Binding SetDayViewCommand}" />
        <KeyBinding Modifiers="Control" Key="D2" Command="{Binding SetWeekViewCommand}" />
        <KeyBinding Modifiers="Control" Key="D3" Command="{Binding SetWorkWeekViewCommand}" />
        <KeyBinding Modifiers="Control" Key="D4" Command="{Binding SetMonthViewCommand}" />
        <KeyBinding Modifiers="Control" Key="Left" Command="{Binding PreviousRangeCommand}" />
        <KeyBinding Modifiers="Control" Key="Right" Command="{Binding NextRangeCommand}" />
        <KeyBinding Modifiers="Control" Key="T" Command="{Binding GoToTodayCommand}" />
        <KeyBinding Key="F5" Command="{Binding RefreshViewCommand}" />
    </Window.InputBindings>

    <Window.Resources>
        <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
        <converters:BoolToMonthForegroundConverter x:Key="BoolToMonthForegroundConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="{DynamicResource AppMenuBackgroundBrush}">
            <MenuItem Header="_File">
                <MenuItem Header="Export to PDF" Command="{Binding ExportCurrentViewPdfCommand}" />
                <Separator />
                <MenuItem Header="Backup Database..." InputGestureText="Ctrl+B" Command="{Binding ShowStubFeatureCommand}" CommandParameter="Backup Database" />
                <MenuItem Header="Manage Backups..." Command="{Binding ShowStubFeatureCommand}" CommandParameter="Manage Backups" />
                <Separator />
                <MenuItem Header="Exit" Command="{Binding ShowStubFeatureCommand}" CommandParameter="Exit" />
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="Undo" InputGestureText="Ctrl+Z" IsEnabled="False" />
                <MenuItem Header="Redo" InputGestureText="Ctrl+Y" IsEnabled="False" />
                <Separator />
                <MenuItem Header="Settings" InputGestureText="Ctrl+S" Command="{Binding ShowStubFeatureCommand}" CommandParameter="Settings" />
                <MenuItem Header="Manage Themes..." Command="{Binding OpenThemeManagerDialogCommand}" />
                <MenuItem Header="Manage Categories..." Command="{Binding OpenCategoryManagerDialogCommand}" />
            </MenuItem>

            <MenuItem Header="_View">
                <MenuItem Header="Show Sidebar" InputGestureText="Ctrl+I" IsCheckable="True" IsChecked="{Binding IsSidebarVisible, Mode=TwoWay}" />
                <MenuItem Header="Show All-Day Events Ribbon" IsCheckable="True" IsChecked="True" IsEnabled="False" />
                <Separator />
                <MenuItem Header="Calendar Views">
                    <MenuItem Header="Day" Command="{Binding SetDayViewCommand}" />
                    <MenuItem Header="Week" Command="{Binding SetWeekViewCommand}" />
                    <MenuItem Header="Work Week" Command="{Binding SetWorkWeekViewCommand}" />
                    <MenuItem Header="Month" Command="{Binding SetMonthViewCommand}" />
                </MenuItem>
                <MenuItem Header="Themes">
                    <MenuItem Header="Light" Command="{Binding SetThemeLightCommand}" IsCheckable="True" IsChecked="{Binding IsLightThemeSelected, Mode=OneWay}" />
                    <MenuItem Header="Dark" Command="{Binding SetThemeDarkCommand}" IsCheckable="True" IsChecked="{Binding IsDarkThemeSelected, Mode=OneWay}" />
                    <MenuItem Header="System" Command="{Binding SetThemeSystemCommand}" IsCheckable="True" IsChecked="{Binding IsSystemThemeSelected, Mode=OneWay}" />
                    <Separator />
                    <MenuItem Header="Manage Themes..." Command="{Binding OpenThemeManagerDialogCommand}" />
                </MenuItem>
                <MenuItem Header="Filter by Category" Command="{Binding ShowStubFeatureCommand}" CommandParameter="Filter by Category" />
                <MenuItem Header="Countdown Cards" Command="{Binding OpenCountdownManagerDialogCommand}" />
            </MenuItem>

            <MenuItem Header="_Events">
                <MenuItem Header="New Event..." InputGestureText="Ctrl+N" Command="{Binding OpenNewEventDialogCommand}" />
                <MenuItem Header="Templates" Command="{Binding OpenTemplateManagerDialogCommand}" />
                <MenuItem Header="Search Events..." InputGestureText="Ctrl+F" Command="{Binding OpenSearchDialogCommand}" />
                <MenuItem Header="Import Event..." Command="{Binding ShowStubFeatureCommand}" CommandParameter="Import Event" />
                <MenuItem Header="Export Events" Command="{Binding ShowStubFeatureCommand}" CommandParameter="Export Events" />
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="About..." Command="{Binding ShowStubFeatureCommand}" CommandParameter="About" />
            </MenuItem>
        </Menu>

        <TextBlock Grid.Row="1" FontSize="28" FontWeight="SemiBold" Text="{Binding Title}" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,12">
            <Button Width="140" Margin="0,0,8,0" Content="Day" Command="{Binding SetDayViewCommand}" />
            <Button Width="140" Margin="0,0,8,0" Content="Week" Command="{Binding SetWeekViewCommand}" />
            <Button Width="140" Margin="0,0,8,0" Content="Work Week" Command="{Binding SetWorkWeekViewCommand}" />
            <Button Width="140" Margin="0,0,8,0" Content="Month" Command="{Binding SetMonthViewCommand}" />
            <TextBlock VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource AppSecondaryTextBrush}" Text="{Binding ActiveViewLabel}" />
        </StackPanel>

        <DockPanel Grid.Row="3" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Width="160" Margin="0,0,8,0" Content="Load Sample Events" Command="{Binding LoadSampleEventsCommand}" />
                <Button Width="130" Margin="0,0,8,0" Content="Load P3 Data" Command="{Binding LoadPhase3VerificationDataCommand}" />
                <Button Width="110" Margin="0,0,8,0" Content="New Event" Command="{Binding OpenNewEventDialogCommand}" />
                <Button Width="90" Margin="0,0,8,0" Content="Search" Command="{Binding OpenSearchDialogCommand}" />
                <Button Width="90" Margin="0,0,8,0" Content="Export PDF" Command="{Binding ExportCurrentViewPdfCommand}" />
                <Button Width="100" Margin="0,0,8,0" Content="Countdown" Command="{Binding OpenCountdownManagerDialogCommand}" />
                <Button Width="100" Margin="0,0,8,0" Content="Categories" Command="{Binding OpenCategoryManagerDialogCommand}" />
                <Button Width="95" Content="Templates" Command="{Binding OpenTemplateManagerDialogCommand}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Width="90" Margin="0,0,8,0" Content="Previous" Command="{Binding PreviousRangeCommand}" />
                <Button Width="90" Margin="0,0,8,0" Content="Today" Command="{Binding GoToTodayCommand}" />
                <Button Width="90" Margin="0,0,8,0" Content="Next" Command="{Binding NextRangeCommand}" />
                <TextBlock VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource AppSecondaryTextBrush}" Text="{Binding CurrentRangeLabel}" />
            </StackPanel>
        </DockPanel>

            <Border Grid.Row="4"
                Margin="0,0,0,10"
                Padding="10"
                Background="{DynamicResource AppPanelBackgroundBrush}"
                BorderBrush="{DynamicResource AppBorderBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Visibility="{Binding HasCountdownCards, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock FontWeight="SemiBold" Margin="0,0,0,8" Text="Countdown" />
                <ItemsControl ItemsSource="{Binding CountdownCards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border MinWidth="180"
                                    MaxWidth="240"
                                    Margin="0,0,10,10"
                                    Padding="10"
                                    BorderBrush="{Binding ColourHex}"
                                    BorderThickness="2"
                                    CornerRadius="6">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold"
                                               Text="{Binding Title}"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"
                                               MaxHeight="34" />
                                    <TextBlock Margin="0,4,0,0" FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource AppSecondaryTextBrush}" Text="{Binding StatusLabel}" />
                                    <TextBlock Margin="0,6,0,0" Foreground="{DynamicResource AppSecondaryTextBrush}" Text="{Binding TargetDateLabel}" />
                                    <TextBlock Margin="0,6,0,0" FontWeight="SemiBold" Text="{Binding RemainingLabel}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <views:DayViewControl Visibility="{Binding ActiveView, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Day}" />
                <views:WeekViewControl Visibility="{Binding ActiveView, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Week}" />
                <views:WorkWeekViewControl Visibility="{Binding ActiveView, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=WorkWeek}" />
                <views:MonthViewControl Visibility="{Binding ActiveView, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Month}" />

                <Border Padding="14"
                        Background="{DynamicResource AppOverlayBackgroundBrush}"
                        CornerRadius="6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding ShowLoadingState, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Loading calendar events..." FontWeight="SemiBold" />
                </Border>

                <Border Padding="14"
                        Background="{DynamicResource AppOverlayBackgroundBrush}"
                        CornerRadius="6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding ShowErrorState, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="{DynamicResource AppErrorTextBrush}" FontWeight="SemiBold" />
                </Border>

                <Border Padding="14"
                        Background="{DynamicResource AppOverlayBackgroundBrush}"
                        CornerRadius="6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding ShowEmptyState, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding EmptyStateMessage}" Foreground="{DynamicResource AppSecondaryTextBrush}" FontWeight="SemiBold" />
                </Border>
            </Grid>

            <Border Grid.Column="1"
                    Width="250"
                    Margin="12,0,0,0"
                    Padding="10"
                    Background="{DynamicResource AppPanelBackgroundBrush}"
                    BorderBrush="{DynamicResource AppBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Visibility="{Binding IsSidebarVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock FontWeight="SemiBold"
                               Text="{Binding CurrentRangeLabel}"
                               Margin="0,0,0,8" />

                    <Calendar Grid.Row="1"
                              DisplayDate="{Binding SidebarDisplayMonth, Mode=OneWay}"
                              SelectedDate="{Binding SidebarDisplayDate, Mode=OneWay}"
                              IsTodayHighlighted="True"
                              IsHitTestVisible="False"
                              Margin="0,0,0,10" />

                    <TextBlock Grid.Row="2" FontWeight="SemiBold" Margin="0,0,0,6" Text="Today's Agenda" />
                    <ItemsControl Grid.Row="3" ItemsSource="{Binding SidebarTodayAgenda}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,6">
                                    <TextBlock FontWeight="SemiBold" Text="{Binding Title}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock FontSize="11" Foreground="{DynamicResource AppSecondaryTextBrush}">
                                        <Run Text="{Binding TimeLabel}" />
                                        <Run Text="  " />
                                        <Run Text="[" />
                                        <Run Text="{Binding Category}" />
                                        <Run Text="]" />
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Grid.Row="4" FontWeight="SemiBold" Margin="0,10,0,6" Text="Upcoming Events" />
                    <ItemsControl Grid.Row="5" ItemsSource="{Binding SidebarUpcomingEvents}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,6">
                                    <TextBlock FontWeight="SemiBold" Text="{Binding Title}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock FontSize="11" Foreground="{DynamicResource AppSecondaryTextBrush}">
                                        <Run Text="{Binding TimeLabel}" />
                                        <Run Text="  " />
                                        <Run Text="[" />
                                        <Run Text="{Binding Category}" />
                                        <Run Text="]" />
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
