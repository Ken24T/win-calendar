<UserControl x:Class="WinCalendar.App.Views.Calendar.DayViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="480"
             d:DesignWidth="800">
    <Grid>
        <DataGrid ItemsSource="{Binding DayEvents}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Start" Binding="{Binding StartDateTime}" Width="2*" />
                <DataGridTextColumn Header="End" Binding="{Binding EndDateTime}" Width="2*" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="3*" />
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
